
// - Run - sudo apt update && sudo apt install docker.io -y && sudo usermod -aG docker $USER && newgrp docker && sudo usermod -aG docker jenkins
// Docker and docker-compose should be installed on the Jenkins server.
pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/master']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/prathamesh633/student-management-app.git']]
                )
            }
        }

        stage('docker deploy') {
            steps {
                sh '''
                    docker-compose down -v || true
                    docker-compose up -d --build
                '''
            }
        }

        stage('docker cleanup') {
            steps {
                sh 'docker system prune -a -f'
            }
        }
    }
}
